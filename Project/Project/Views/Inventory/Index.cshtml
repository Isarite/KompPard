@model IEnumerable<InventoryItem>

@{
    ViewData["Title"] = "View";
}

<style>
    .table:hover {
        cursor: pointer;
    }
</style>

<h2>View</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row">
    @foreach (var item in Model)
    {
        var len = item.Description.Length;
        var descrition = len > 40 ? item.Description.Substring(0, 40) + "..." : item.Description.Substring(0, len);
        <div class="col-md-3">
            <div class="card">
                <img class="card-img-top" src="@item.ImgPath" style="width: 100%;" />
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@descrition</p>
                    <a href="@Url.Action("Details")/@item.Id" class="btn btn-primary">Check it out!</a>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function ($) {
            $(".data-row").click(function () {
                window.location = $(this).data("href");
            });
        });
    </script>
}