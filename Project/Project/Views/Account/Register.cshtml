@model Project.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<header>
    <h4>Create a new account</h4>
</header>

<form method="post">
    <hr />
    <div class="form-group">
        <label asp-for="FirstName">First name</label>
        <input asp-for="FirstName" class="form-control" type="text" placeholder="Enter first name" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName">Last name</label>
        <input asp-for="LastName" class="form-control" type="text" placeholder="Enter last name" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" type="text" placeholder="Enter your email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" class="form-control" type="password" placeholder="Enter password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword">Confirm password</label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Repeat password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CountryId">Country</label>
        <select asp-for="CountryId" asp-items="@(new SelectList(Model.Countries, "Id", "Name"))" class="form-control"></select>
        <span asp-validation-for="CountryId" class="text-danger"></span>
    </div>

    <div class="form-check">
        <input class="form-check-input" asp-for="Subscribed">
        <label class="form-check-label" for="Subscribed">
            Subscribe to newsletter
        </label>
    </div>

    <button type="submit" class="btn">Register</button>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
